<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>  
    <rewrite>  
        <rules>  
          <rule name="Redirect www to root" stopProcessing="true">
            <match url="(.*)" />  
            <conditions logicalGrouping="MatchAny">
              <add input="{HTTP_HOST}" pattern="^www\.publyto\.io$" />
            </conditions>
            <action type="Redirect" url="http://publyto.io/{R:0}" />  
          </rule>  
        </rules>  
    </rewrite>  
  </system.webServer>  
</configuration>