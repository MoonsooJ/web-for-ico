<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <rewrite>
        <rule name="NonWwwRedirect"  stopProcessing="true"> 
            <match url="(.*)" />
            <conditions>
                <add input="{HTTP_HOST}" pattern="^www\.publyto\.io$" />
            </conditions>
            <action type="Redirect" url="http://publyto.io/{R:0}" redirectType="Permanent" />
        </rule> 
      </rules>
    </rewrite>
  </system.webServer>
</configuration>