<configuration>
  <system.webServer>  
    <rewrite>  
        <rules>  
          <rule name="Redirect www to root domain" stopProcessing="true">
            <match url="(.*)" />  
            <conditions logicalGrouping="MatchAny">
              <add input="{HTTP_HOST}" pattern="^www\.publyto\.io$" />
            </conditions>
            <action type="Redirect" url="publyto.io" />  
          </rule>  
        </rules>  
    </rewrite>
  </system.webServer>  
</configuration>